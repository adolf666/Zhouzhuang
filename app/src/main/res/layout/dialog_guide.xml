<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="#ffffff"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">
    <TextView
        android:id="@+id/tv_spot_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="省厅"
        android:gravity="center_vertical"
        android:textSize="19sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:layout_marginTop="13dp"
        >
        <ImageView
            android:id="@+id/iv_spots_img"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@mipmap/spotsimg"/>
        <TextView
            android:id="@+id/tv_spot_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="wafwopefk kaw p k apw kfa jpj ap wej apo fja jja fjpae fjpaej fapj fapeof japf aj jaw jpo oaj fopaj waj pofja fjapof ja jfajpf jaj fajp e"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="22dp">
    <Button
        android:id="@+id/tv_navigation_map"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@mipmap/btn_login_default"
        android:text="导航"
        android:textSize="18sp"
        android:textColor="#ffffff"/>
    <Button
        android:id="@+id/bt_audio_play"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@mipmap/btn_login_default"
        android:layout_marginLeft="12dp"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:text="语言"/>
    <Button
        android:id="@+id/bt_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@mipmap/btn_login_default"
        android:layout_marginLeft="12dp"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:text="详细"/>
</LinearLayout>
</LinearLayout>