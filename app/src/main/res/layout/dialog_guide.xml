<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@android:color/transparent"
    >
<LinearLayout
    android:id="@+id/ll_guide_bg"
    android:layout_width="270dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="170dp"
        android:background="@mipmap/mask_jingdain"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_favorite"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_spot_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/bt_favorite"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/tv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@drawable/dialog_selector_close" />
        </RelativeLayout>

        <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="85dp"-->
            <!--android:layout_marginTop="13dp"-->
            <!--android:orientation="horizontal">-->

        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/tv_navigation_map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dialog_selector_navi" />

            <Button
                android:id="@+id/bt_audio_play"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_selector_voice" />

            <Button
                android:id="@+id/bt_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_selector_details" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
</RelativeLayout>