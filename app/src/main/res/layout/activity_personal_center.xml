<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/item_actionbar"
        android:layout_width="match_parent"
        android:layout_height="49dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@mipmap/bg_center">

            <RelativeLayout
                android:id="@+id/rl_portrait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
               >

               <TextView
                   android:layout_width="98dp"
                   android:layout_height="98dp"
                   android:layout_centerInParent="true"
                   android:background="@drawable/activity_person_center"
                />
                <ImageView
                    android:id="@+id/iv_portrait"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/centerphoto"
                    />
</RelativeLayout>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_portrait"
                android:layout_centerInParent="true"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:textColor="#e6c59a"
                android:textSize="16sp"
                android:text="登录/注册"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_person_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/icon_personalinfo"
                android:paddingLeft="17dp"
                android:drawablePadding="10dp"
                android:text="个人信息"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="@drawable/personal_info_selector"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_collect"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_favor"
                android:paddingLeft="17dp"
                android:layout_centerVertical="true"
                android:text="我的收藏"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/personal_info_selector"
                android:textSize="16sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_setting"
                android:paddingLeft="17dp"
                android:text="设置"
                android:drawablePadding="10dp"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:background="@drawable/personal_setting_selector"
                android:textAppearance="?android:attr/textAppearanceLarge" />

          <!--  <TextView
                android:id="@+id/tv_strategy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_suggest"
                android:paddingLeft="17dp"
                android:gravity="center_vertical"
                android:text="游玩攻略"
                android:drawablePadding="10dp"
                android:textSize="16sp"
                android:background="@drawable/personal_setting_selector"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />-->
            <TextView
                android:id="@+id/tv_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_suggest"
                android:paddingLeft="17dp"
                android:gravity="center_vertical"
                android:text="意见反馈"
                android:textSize="16sp"
                android:drawablePadding="10dp"
                android:background="@drawable/personal_suggest_selector"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            <TextView
                android:id="@+id/tv_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_suggest"
                android:paddingLeft="17dp"
                android:gravity="center_vertical"
                android:text="关于"
                android:textSize="16sp"
                android:drawablePadding="10dp"
                android:background="@drawable/personal_suggest_selector"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>