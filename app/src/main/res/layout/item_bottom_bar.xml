<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bbbbbb"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="7.5dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_museum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/btn_menu01_focused"
            android:gravity="center"
            android:textColor="#333240"
            android:drawablePadding="7.5dp"
            android:text="周庄博物馆"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_collection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/btn_menu02_default"
            android:textColor="#8e8e99"
            android:text="馆藏珍品"
            android:textSize="12sp"
            android:drawablePadding="7.5dp"/>

        <TextView
            android:id="@+id/tv_navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/btn_menu03_default"
            android:textColor="#8e8e99"
            android:text="周庄导览"
            android:textSize="12sp"
            android:drawablePadding="7.5dp"/>

        <TextView
            android:id="@+id/tv_strategy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/btn_menu04_default"
            android:textColor="#8e8e99"
            android:text="游玩攻略"
            android:textSize="12sp"
            android:drawablePadding="7.5dp"/>
    </LinearLayout>
</LinearLayout>